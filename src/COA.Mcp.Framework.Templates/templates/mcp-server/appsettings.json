{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "McpServer": {
    "Name": "McpServerTemplate",
    "Version": "1.0.0",
    "TokenOptimization": {
      "DefaultTokenLimit": 10000,
      "SafetyMargin": 500,
      "EstimationAccuracyTarget": 0.95
    },
    "ResponseBuilding": {
      "EnableAIOptimization": true,
      "MinInsights": 3,
      "MaxInsights": 5,
      "IncludeUsageHints": true
    },
    "Caching": {
      "Enabled": true,
      "DefaultExpiration": "00:15:00",
      "MaxCacheSize": 100
    }
  }
}